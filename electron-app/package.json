{
  "name": "zeno-electron",
  "version": "1.0.0",
  "description": "Electron UI for Zeno - Run Go binary with Docker",
  "main": "main.js",
  "scripts": {
    "build": "esbuild renderer.js --bundle --outfile=renderer.bundle.js --platform=browser --target=es2020 --format=iife --jsx=automatic --loader:.js=jsx --loader:.jsx=jsx --external:electron && esbuild chat-renderer.js --bundle --outfile=chat.bundle.js --platform=browser --target=es2020 --format=iife --jsx=automatic --loader:.js=jsx --loader:.jsx=jsx --external:electron",
    "build:watch": "esbuild renderer.js --bundle --outfile=renderer.bundle.js --platform=browser --target=es2020 --format=iife --jsx=automatic --loader:.js=jsx --loader:.jsx=jsx --external:electron --watch=forever & esbuild chat-renderer.js --bundle --outfile=chat.bundle.js --platform=browser --target=es2020 --format=iife --jsx=automatic --loader:.js=jsx --loader:.jsx=jsx --external:electron --watch=forever & wait",
    "start": "npm run build && electron .",
    "start:web": "npm run build && PORT=3000 node server.js",
    "dev": "node dev-electron.js",
    "dev:web": "node dev-server.js"
  },
  "keywords": ["electron", "zeno", "docker"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "express": "^4.18.2",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "esbuild": "^0.19.8"
  }
}
